    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Generator",
            "type": "code-d",
            "request": "launch",
            "program": "lib/generator.exe",
            "args": ["-j", "../extension_api.json", "-o"],
            "cwd": "${workspaceRoot}",
            //"preLaunchTask": "Build Generate API"
        },
        {
            "name": "(test project) GD4 editor",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/godot/bin/godot.windows.editor.dev.x86_64.exe",
            "args": ["${workspaceFolder}/examples/test/project/project.godot"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole"
        },
        {
            "name": "(asteroids) GD4 editor",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/godot/bin/godot.windows.editor.dev.x86_64.exe",
            "args": ["${workspaceFolder}/examples/asteroids/project/project.godot"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole"
        },
        {
            "name": "(test project) GD4 instance",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/godot/bin/godot.windows.editor.dev.x86_64.exe",
            //"program": "D:/godot/Godot_v4.2-beta5_win32.exe",
            "args": ["--path", "${workspaceFolder}/examples/test/project", "-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole"
        },
        {
            "name": "(asteroids) GD4 instance",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/godot/bin/godot.windows.editor.dev.x86_64.exe",
            "args": ["--path", "${workspaceFolder}/examples/asteroids/project"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console":"internalConsole"
        },
        {
            "name": "Linux (test project) GD4 editor",
            "type": "lldb",
            "request": "launch",
            "program": "/bin/godot",
            "args": ["${workspaceFolder}/examples/test/project/project.godot"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Linux (asteroids) GD4 editor",
            "type": "lldb",
            "request": "launch",
            "program": "/bin/godot",
            "args": ["${workspaceFolder}/examples/asteroids/project/project.godot"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Linux (test project) GD4 instance",
            "type": "lldb",
            "request": "launch",
            "program": "/bin/godot",
            "args": ["--path", "${workspaceFolder}/examples/test/project"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Linux (asteroids) GD4 instance",
            "type": "lldb",
            "request": "launch",
            "program": "/bin/godot",
            "args": ["--path", "${workspaceFolder}/examples/asteroids/project"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}